# Easy grep
gall(){
    grep -Prin "$*" *
}

# commit all changes with a particular
fullcommit(){
    git commit -am"$*"
}

export PS1="\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\033[01;36m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$(__git_ps1)\n\$"
